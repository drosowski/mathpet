<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/kariert"
    tools:context="com.rosowski.mathpet.MathProblemActivity">

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:id="@+id/topspacer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/topspacer"
        android:layout_alignParentLeft="true"
        android:id="@+id/currentLevel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/topspacer"
        android:layout_alignParentRight="true"
        android:id="@+id/progress"/>
    <Space
        android:layout_width="1dp"
        android:layout_height="120dp"
        android:layout_below="@id/currentLevel"
        android:id="@+id/spacer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_below="@id/spacer"
        android:id="@+id/problem"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_toRightOf="@id/problem"
        android:layout_toEndOf="@id/problem"
        android:layout_below="@id/spacer"
        android:inputType="number"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/answer"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/problem"
        android:text="@string/button_answer"
        android:id="@+id/sendAnswer"
        android:onClick="checkAnswer"/>
</RelativeLayout>
